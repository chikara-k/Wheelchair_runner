<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3 style="padding: 20px 0;">ユーザー編集</h3>
        <%= form_with model: @user, url: mypage_path, local: true do |f| %>
        <label for="name">ユーザーネーム</label>
        <div class="form-group">
          <%= f.text_field :name, class: 'form-control', placeholder: " 例：太郎" %>
        </div>

        <label for="mail">メールアドレス</label>
        <div class="form-group">
          <%= f.email_field :email, class: 'form-control', placeholder: "例：sample@wheelchair.com" %>
        </div>

        <label for="profile_image_id">プロフィール画像</label>
        <div class="form-row">
          <div class="form-group col-lg-6">
            <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
          </div>
        </div>

        <label for="introduction">自己紹介</label>
        <div class="form-group">
          <%= f.text_area :introduction, class: 'form-control', placeholder: "自己紹介" %>
        </div>

        <label for="user_status">ステータス</label>
        <div class="form-group">
          <%= f.radio_button :user_status, "ランナー" %>
          <%= f.label :user_status, "ランナー" %>
        </td>
          <%= f.radio_button :user_status, "ボランティア" %>
          <%= f.label :user_status, "ボランティア" %>
        </div>

        <label for="experience">経験年数</label>
        <div class="form-group">
          <%= f.number_field :experience, :value => @user.experience, min: 0, max: 100 %>
        </div>

        <div class="actions">
          <%= f.submit "編集する", class: "btn btn-success mb-5" %>
        </div>
        <% end %>
    </div>
  </div>
</div>